<div class="accounts-rsvp">
  <div class="content-link content-link-margin"><%= link_to "Accounts", admin_accounts_path %></div>
  <h2>Guests</h2>
  <p><%= "Total      : #{@guest_count}" %></p>
  <p><%= "Total cool : #{@coming_count}" %></p>
  <p><%= "Total lame : #{@not_coming_count}" %></p>
  <br />
  <ul>
    <% guest_number = 1 %>
    <% @guests.each do |guest| %>
      <li>
        <div class="saved-guest-wrapper">
          <%= render partial: 'admin/shared/guest', locals: { guest: guest, guest_number: guest_number } %>
        </div>        
      </li>
      <% guest_number = guest_number + 1 %>
    <% end %>   
  </ul>
</div>